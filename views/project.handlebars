<div class="text-center">
  <h2>{{name}}</h2>
  
  <p>{{description}}</p>
  <p>Written by {{user.name}} on {{format_date date_created}}</p>
  {{#each comments as |comment|}}
    <div class="row mb-2">
      {{comment.text}} by {{comment.user.name}} on {{format_date comment.createdAt}} 
      
      
    </div>
    {{/each}}
  <p>
    <div class="form-group">
      <form class="form new-comment-form" id="user-comment" name="user-comment">
      <input id="comment" name="comment-text" class="form-input"/>
    
    
  <p>
    <button type="submit" class="btn">Add your comment</button>
  </p>
  </form>
</div>
<script src = "/js/comment.js"></script>